<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Personas" table="personas">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="primerNombre" type="string" column="primer_nombre" length="50" nullable="true"/>
    <field name="segundoNombre" type="string" column="segundo_nombre" length="50" nullable="true"/>
    <field name="primerApellido" type="string" column="primer_apellido" length="50" nullable="true"/>
    <field name="segundoApellido" type="string" column="segundo_apellido" length="50" nullable="true"/>
    <field name="codigo" type="string" column="codigo" length="27" nullable="true"/>
    <field name="email" type="string" column="email" length="250" nullable="true"/>
    <field name="telefonoFijo" type="string" column="telefono_fijo" length="15" nullable="true"/>
    <field name="movil" type="string" column="movil" length="15" nullable="true"/>
    <field name="tipoDoc" type="string" column="tipo_doc" length="2" nullable="true"/>
    <field name="numeroDoc" type="string" column="numero_doc" length="10" nullable="true"/>
    <field name="estado" type="string" column="estado" length="1" nullable="true"/>
  </entity>
</doctrine-mapping>
