    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Primernombre</th>
                <td>{{ entity.primerNombre }}</td>
            </tr>
            <tr>
                <th>Segundonombre</th>
                <td>{{ entity.segundoNombre }}</td>
            </tr>
            <tr>
                <th>Primerapellido</th>
                <td>{{ entity.primerApellido }}</td>
            </tr>
            <tr>
                <th>Segundoapellido</th>
                <td>{{ entity.segundoApellido }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ entity.codigo }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Telefonofijo</th>
                <td>{{ entity.telefonoFijo }}</td>
            </tr>
            <tr>
                <th>Movil</th>
                <td>{{ entity.movil }}</td>
            </tr>
            <tr>
                <th>Tipodoc</th>
                <td>{{ entity.tipoDoc }}</td>
            </tr>
            <tr>
                <th>Numerodoc</th>
                <td>{{ entity.numeroDoc }}</td>
            </tr>
            <tr>
              {#  <th>Estado</th>#}
              {#  <td>{{ entity.estado }}</td>#}
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('personas') }}">
            Volver a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('personas_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>

    {#<li><p>{{ form(delete_form) }}</p></li>#}
